# ML Service Environment Variables

# Server
ML_SERVICE_PORT=8000
ML_SERVICE_HOST=0.0.0.0
ENVIRONMENT=development

# PostgreSQL Connection (same as Node.js backend)
DATABASE_URL=postgresql://postgres:password@localhost:5432/viabaq_db

# Model Settings
MODEL_TYPE=lightgbm  # lightgbm, randomforest, xgboost
MODEL_PATH=./models/traffic_model.pkl
FEATURE_SCALER_PATH=./models/scaler.pkl

# Training Settings
TRAIN_TEST_SPLIT=0.2
RANDOM_STATE=42
N_ESTIMATORS=100
MAX_DEPTH=10

# Prediction Settings
PREDICTION_CACHE_TTL=900  # 15 minutes in seconds

# Logging
LOG_LEVEL=INFO
